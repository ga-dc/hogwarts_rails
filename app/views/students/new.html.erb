<h1>Welcome to the Sorting Hat!</h1>

<h2> Enter New Students Name </h2>
<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit "Submit" %>
<% end %>
