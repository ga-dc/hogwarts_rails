<h1>Welcome to the Sorting Hat!</h1>

<%= yield %>
  <h2>Enroll New Student</h2>
  <img src="http://flavorwire.files.wordpress.com/2009/06/sorting-hat.jpg" alt="Sorting Hat" />
    <%= form_for @student do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :img_url %>
      <%= f.text_field :img_url %>
      <%= f.submit "Enroll a New Student" %>
    <% end %>
